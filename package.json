{
  "name": "vertical-tabs",
  "sideEffects": false,
  "scripts": {
    "lint": "eslint .",
    "build": "webpack-cli --mode production",
    "dev-build": "webpack-cli --mode development",
    "webext": "webpack-cli --mode development && web-ext run --start-url 'about:debugging#/runtime/this-firefox' -s dist"
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 100,
    "quoteProps": "preserve",
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "webextensions": true
    },
    "extends": "prettier",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "rules": {
      "eqeqeq": "error",
      "no-var": "error",
      "prefer-const": "error",
      "prefer-template": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "lint-staged": {
    "*.{js,yaml,html,css,json,yaml,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typeling1578/vertical-tabs.git"
  },
  "author": "typeling1578",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/typeling1578/vertical-tabs/issues"
  },
  "homepage": "https://github.com/typeling1578/vertical-tabs",
  "devDependencies": {
    "copy-webpack-plugin": "^10.2.4",
    "cssnano": "^5.0.17",
    "eslint": "^8.10.0",
    "postcss": "^8.4.7",
    "web-ext": "^6.7.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^3.4.0",
    "fuzzysort": "^1.2.1",
    "photon-colors": "^3.3.2",
    "smooth-scroll-into-view-if-needed": "^1.1.33"
  }
}
